{
  "name": "excel-mcp",
  "displayName": "Excel MCP Server",
  "description": "Excel automation for AI assistants - manage Sheets, Power Query, DAX, VBA, Tables, Ranges, Formatting, Validation & more - requires Excel to be installed",
  "version": "1.1.3",
  "publisher": "sbroenne",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/sbroenne/mcp-server-excel"
  },
  "bugs": {
    "url": "https://github.com/sbroenne/mcp-server-excel/issues"
  },
  "homepage": "https://github.com/sbroenne/mcp-server-excel#readme",
  "license": "MIT",
  "engines": {
    "vscode": "^1.105.0"
  },
  "os": [
    "win32"
  ],
  "categories": [
    "AI",
    "Chat",
    "Data Science"
  ],
  "keywords": [
    "mcp",
    "model context protocol",
    "excel",
    "microsoft",
    "office",
    "spreadsheet",
    "automation",
    "power query",
    "m language",
    "dax",
    "data model",
    "power pivot",
    "vba",
    "macro",
    "table",
    "copilot",
    "ai",
    "github copilot",
    "data analysis"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionDependencies": [
    "ms-dotnettools.vscode-dotnet-runtime"
  ],
  "main": "./out/extension.js",
  "files": [
    "out/**",
    "bin/**",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "icon.png"
  ],
  "contributes": {
    "mcpServerDefinitionProviders": [
      {
        "id": "excel-mcp",
        "label": "Excel MCP"
      }
    ]
  },
  "scripts": {
    "clean": "cd .. && dotnet clean src/ExcelMcp.McpServer/ExcelMcp.McpServer.csproj -c Release",
    "build:mcp-server": "npm run clean && cd .. && dotnet publish src/ExcelMcp.McpServer/ExcelMcp.McpServer.csproj -c Release -r win-x64 --self-contained -o vscode-extension/bin --verbosity minimal",
    "vscode:prepublish": "npm run build:mcp-server && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npm run build:mcp-server && vsce package",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "@types/vscode": "^1.106.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vscode/vsce": "^3.7.0",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  }
}
