{
  "name": "excel-mcp",
  "displayName": "Excel MCP Server",
  "description": "Excel automation for AI assistants - manage Sheets, Power Query, DAX, VBA, PowerPivot, Tables, Ranges, Charts, Formatting, Validation & more - requires Excel to be installed",
  "version": "1.1.3",
  "publisher": "sbroenne",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/sbroenne/mcp-server-excel"
  },
  "bugs": {
    "url": "https://github.com/sbroenne/mcp-server-excel/issues"
  },
  "homepage": "https://excelmcpserver.dev/",
  "license": "MIT",
  "engines": {
    "vscode": "^1.106.0"
  },
  "os": [
    "win32"
  ],
  "categories": [
    "AI",
    "Chat",
    "Data Science"
  ],
  "keywords": [
    "mcp",
    "model context protocol",
    "excel",
    "microsoft",
    "office",
    "spreadsheet",
    "automation",
    "power query",
    "m language",
    "dax",
    "data model",
    "power pivot",
    "vba",
    "macro",
    "table",
    "copilot",
    "ai",
    "github copilot",
    "data analysis"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/src/extension.js",
  "files": [
    "out/**",
    "bin/**",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "icon.png"
  ],
  "contributes": {
    "configuration": {
      "title": "Excel MCP",
      "properties": {
        "excelMcp.pollIntervalMs": {
          "type": "number",
          "default": 3000,
          "minimum": 1000,
          "maximum": 60000,
          "description": "Polling interval in milliseconds for status updates"
        }
      }
    },
    "commands": [
      {
        "command": "excelMcp.showSessions",
        "title": "Excel MCP: Show Sessions"
      }
    ],
    "mcpServerDefinitionProviders": [
      {
        "id": "excel-mcp",
        "label": "Excel MCP"
      }
    ]
  },
  "scripts": {
    "clean": "cd .. && dotnet clean src/ExcelMcp.McpServer/ExcelMcp.McpServer.csproj -c Release",
    "build:mcp-server": "npm run clean && cd .. && dotnet publish src/ExcelMcp.McpServer/ExcelMcp.McpServer.csproj -c Release --no-self-contained -o vscode-extension/bin --verbosity minimal",
    "vscode:prepublish": "npm run build:mcp-server && npm run compile",
    "compile": "tsc -p ./",
    "test": "npm run test:unit",
    "test:unit": "mocha --ui tdd --require tsx tests/*.test.ts",
    "test:integration": "node ./out/tests/runTest.js",
    "watch": "tsc -watch -p ./",
    "package": "npm run build:mcp-server && vsce package",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.3",
    "@types/vscode": "^1.106.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.39.2",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  }
}
